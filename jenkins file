pipeline {
    agent any

    options {
        buildDiscarder(logRotator(numToKeepStr: '5', artifactNumToKeepStr: '5'))
    }

    environment {
        MAVEN_HOME = '/opt/maven'  // Update this if needed
        PATH = "${MAVEN_HOME}/bin:${env.PATH}"
    }

    stages {
        stage('Clean Workspace') {
            steps {
                echo 'Cleaning workspace...'
                deleteDir() // Jenkins built-in method to clean the workspace
            }
        }

        stage('Checkout Code') {
            steps {
                echo 'Checking out code from Git...'
                checkout scm // Ensure the latest code is fetched after cleanup
            }
        }

        stage('Code Compilation') {
            steps {
                echo 'Compiling the code...'
                sh 'mvn clean compile'
            }
        }

        stage('JUnit Execution') {
            steps {
                echo 'Executing JUnit tests...'
                sh 'mvn test'
            }
        }

        stage('Code Packaging') {
            steps {
                echo 'Packaging the code...'
                sh 'mvn package'
            }
        }

        stage('Java, Git Version') {
            steps {
                echo 'Checking Java and Git Versions...'
                sh 'java --version'
                sh 'git --version'
            }
        }
    }
}
